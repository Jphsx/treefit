<!--#############################################################-->
<!--#                                                           #-->
<!--#     Example steering file for Marlin                      #-->
<!--#   for finding and fitting pipigamma candidates consistent #-->
<!--#     with                                                  #-->
<!--#                                                           #-->
<!--#           Eta -> pi+ pi- gamma                            #--> 
<!--#                                                           #-->
<!--#############################################################-->


<marlin>
	<execute>
	<processor name="MyPhotonResponseAdjuster"/>
   	<processor name="MyTreeFitter"/>  
 	</execute>

	<global>
		<parameter name="LCIOInputFiles"> /nfs/dust/ilc/user/wilson/RECO_1904/Eta_20GeV_REC.slcio </parameter>
   		<parameter name="SkipNEvents" value="0" />
   		<parameter name="MaxRecordNumber" value="100" /> <!-- 0 is all events -->
   		<parameter name="SupressCheck" value="false" />
   		<parameter name="GearXMLFile" value="gear_ILD_l4_v02_dd4hep.xml" />
   		<parameter name="Verbosity"    options= "DEBUG0-4,MESSAGE0-4,WARNING0-4,ERROR0-4,SILENT"> DEBUG </parameter>
 	</global>
	
 	<processor name ="MyPhotonResponseAdjuster" type="PhotonResponseAdjuster">
  		<parameter name="InputParticleCollectionName" value="PandoraPFOs" />
   		<parameter name="OutputParticleCollectionName" value="AdjustedParticles" />
   		<parameter name="EnergyScaleFactor" value="0.9437" />
   		<parameter name="Printing" value="5"/>
	</processor>
	
	<processor name="MyTreeFitter" type="treeFitter">   
		<!-- tree parameters -->
		<parameter name="preorderPdgs" type="IntVec"> 221 211 -211 22  </parameter>
		<parameter name="preorderSerial" type="string" value = "0,1,),2,),3,),)" />
		<parameter name="preorderMass" type="FloatVec"> 0.547 -1 -1 -1  </parameter>

		<!-- input/output collection names -->
		<parameter name="InputTrackCollectionName" value="MarlinTrkTracks" />
		<parameter name="InputParticleCollectionName" value="AdjustedParticles" />
		<parameter name="McParticleCollectionName" value="MCParticle" />
   
 	</processor>


</marlin>
