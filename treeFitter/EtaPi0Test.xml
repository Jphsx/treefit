<!--#############################################################-->
<!--#                                                           #-->
<!--#     Example steering file for Marlin                      #-->
<!--#   for finding and fitting pipigamma candidates consistent #-->
<!--#     with                                                  #-->
<!--#                                                           #-->
<!--#           Eta -> pi+ pi- pi0->gamma gamma                 #--> 
<!--#                                                           #-->
<!--#############################################################-->


<marlin>
	<execute>

	<processor name="MyPhotonResponseAdjuster"/>
	<!-- <processor name="MyTrackResponseAdjuster" /> -->
   	<processor name="MyTreeFitter"/>  
	<processor name="MyLCIOOutputProcessor"/>
 	</execute>

	<global>
		<parameter name="LCIOInputFiles"> /pnfs/desy.de/ilc/prod/ilc/mc-opt/ild/rec/calib/resonance/ILD_l5_o1_v02_nobg/v01-19-05-p01/u038/rv01-19-05-p01.sv01-19-05-p01.mILD_l5_o1_v02_nobg.PEta_piPpiMpi0_20GeV.n001_1.d_rec_u038.slcio </parameter>
   		<parameter name="SkipNEvents" value="0" />
   		<parameter name="MaxRecordNumber" value="0" /> <!-- 0 is all events -->
   		<parameter name="SupressCheck" value="false" />
   		<parameter name="GearXMLFile" value="gear_ILD_l5_o1_v02_dd4hep.xml" />
   		<parameter name="Verbosity"    options= "DEBUG0-4,MESSAGE0-4,WARNING0-4,ERROR0-4,SILENT"> DEBUG </parameter>
 	</global>
	
 	<processor name ="MyPhotonResponseAdjuster" type="PhotonResponseAdjuster">
  		<parameter name="InputParticleCollectionName" type="string" lcioInType="ReconstructedParticle">PandoraPFOs</parameter>
   		<parameter name="OutputParticleCollectionName" type="string" lcioOutType="ReconstructedParticle">AdjustedParticles</parameter>
   		<parameter name="EnergyScaleFactor" value="0.9437" />
   		<parameter name="Printing" value="5"/>
	</processor>

	 <processor name="MyTrackResponseAdjuster" type="TrackResponseAdjuster">
  		<parameter name="InputTrackCollectionName" value="MarlinTrkTracks" />
 		<parameter name="OutputTrackCollectionName" value="AdjustedTracks" /> 
  		<parameter name="D0ErrorScaleFactor" value="1.0" />
  		<parameter name="Z0ErrorScaleFactor" value="1.0" />
  		<parameter name="OmegaErrorScaleFactor" value="1.20" />
  		<parameter name="PhiErrorScaleFactor" value="1.0" />
  		<parameter name="TanLambdaErrorScaleFactor" value="1.0" />
  		<parameter name="Printing" value="5" />
 	</processor>
	
	<processor name="MyTreeFitter" type="treeFitter">   
		<!-- tree parameters -->
		<parameter name="preorderPdgs" type="IntVec"> 221 211 -211 111 22 11 -11  </parameter>
		<parameter name="preorderSerial" type="string" value = "0,1,),2,),3,4,),5,),6,),),)" />
<!--		<parameter name="preorderMass" type="FloatVec"> 0.547862 -1 -1 0.1349766 -1 -1  </parameter> -->
		
		<parameter name="preorderMass" type="FloatVec"> -1 -1 -1 -1 -1 -1 -1 </parameter>

		<!-- vertex constraint options -->
		<parameter name="preorderVertexConstraint" type="IntVec"> 1 -1 -1 -1 -1 -1 -1 </parameter>

		<!-- fit object option -->
		<parameter name="TrackFitObject" value="2" />

		<!-- cuts -->
		<parameter name="FitProbabilityCut" value="-2.0" />

		<!-- input/output collection names -->
		<parameter name="InputTrackCollectionName" value="MarlinTrkTracks" />
		<parameter name="InputParticleCollectionName" type="string" lcioInType="ReconstructedParticle">AdjustedParticles</parameter>
		<parameter name="McParticleCollectionName" value="MCParticle" />  
		<parameter name="OutputParticleCollectionName" type="string" lcioOutType="ReconstructedParticle">FittedParticles</parameter>
   
 	</processor>

	<processor name="MyLCIOOutputProcessor" type="LCIOOutputProcessor">
     		<!--   standard output: full reconstruction keep all collections -->
     		<parameter name="LCIOOutputFile" type="string" > ./etapi0fit.slcio </parameter>
     		<parameter name="LCIOWriteMode" type="string" value="WRITE_NEW"/>
		<parameter name="fullSubsetCollections" value="1"/>
   
 	</processor>


</marlin>
